{
  "builds": [
    {
      "src": "weather_project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "weather_project/wsgi.py"
    }
  ],
  "outputDirectory": "staticfiles",
  "installCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
}
